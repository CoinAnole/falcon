export PATH="$HOME/.bun/bin:$PATH"

# Run checks but don't block commit on failure (warn only)
echo "Running pre-commit checks..."
if ! bun run typecheck; then
	echo "⚠️  Type check failed (commit allowed)"
fi
if ! bunx lint-staged; then
	echo "⚠️  Linting failed (commit allowed)"
fi

# Always exit successfully to allow the commit
exit 0
